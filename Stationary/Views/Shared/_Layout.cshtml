<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mini E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
 
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Mini E-Commerce</a>

            <div class="d-flex align-items-center ms-auto">
                @{
                    var username = Context.Session.GetString("Username");
                    var role = Context.Session.GetString("Role");
                }

                @if (!string.IsNullOrEmpty(username) && !string.IsNullOrEmpty(role))
                {
                    <span class="me-3 text-muted small">@role: <strong>@username</strong></span>
                    <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout" title="Logout" aria-label="Logout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.146 11.354a.5.5 0 0 0 .708-.708L9.207 9H13.5a.5.5 0 0 0 0-1H9.207l1.647-1.646a.5.5 0 0 0-.708-.708l-2.5 2.5a.5.5 0 0 0 0 .708l2.5 2.5z"/>
                            <path fill-rule="evenodd" d="M4.5 15A1.5 1.5 0 0 1 3 13.5v-11A1.5 1.5 0 0 1 4.5 1h5A1.5 1.5 0 0 1 11 2.5V5a.5.5 0 0 1-1 0V2.5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0-.5.5v11a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 .5-.5V11a.5.5 0 0 1 1 0v2.5A1.5 1.5 0 0 1 9.5 15h-5z"/>
                        </svg>
                    </a>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="Index">Login</a>
                }
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const getCartCountUrl = '@Url.Action("GetCartCount", "User")';
    </script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
