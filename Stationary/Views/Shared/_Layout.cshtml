<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mini E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
 
</head>
<body>
    @{
        var username = Context.Session.GetString("Username");
        var role = Context.Session.GetString("Role");
    }

    @if (!string.IsNullOrEmpty(username) && !string.IsNullOrEmpty(role))
    {
        <a class="logout-fab" asp-controller="Account" asp-action="Logout" title="Logout @role: @username" aria-label="Logout">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="logout-icon" aria-hidden="true">
                <path d="M16 13v-2H7V8l-5 4 5 4v-3h9z"/>
                <path d="M20 3H10c-1.1 0-2 .9-2 2v4h2V5h10v14H10v-4H8v4c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
            </svg>
        </a>
    }

    <div>
        @RenderBody()
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const getCartCountUrl = '@Url.Action("GetCartCount", "User")';
    </script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
